@model ETicaretData.Entities.Category

@{
    ViewData["Title"] = "Yeni Kategori Ekle";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary">Yeni Kategori Ekle</h2>

    <div class="card shadow-lg">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <!-- Kategori Adı -->
                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Kategori Adı</label>
                    <input asp-for="Name" class="form-control" placeholder="Kategori adını giriniz" required>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                

                <!-- Form Butonları -->
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-success">
                        <i class="fa-solid fa-save"></i> Kaydet
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fa-solid fa-arrow-left"></i> Geri Dön
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- FontAwesome Kütüphanesi -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<!-- Client-Side Validation için -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
