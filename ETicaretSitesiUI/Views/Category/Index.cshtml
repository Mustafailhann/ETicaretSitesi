@model List<ETicaretData.Entities.Category>

@{
    ViewData["Title"] = "Kategoriler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container py-4">
    <h2 class="mb-4 text-primary">Kategoriler</h2>

    <!-- Kategorileri Listeleme Tablosu -->
    <div class="table-responsive">
        <table class="table table-hover shadow-sm">
            <thead class="table-dark">
                <tr>
                    <th>#</th>
                    <th>Kategori Adı</th>
                    <th>Açıklama</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Any())
                {
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td>@category.Description</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-sm btn-warning">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@category.Id" class="btn btn-sm btn-danger">Sil</a>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">Henüz kategori eklenmemiş.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Yeni Kategori Ekleme Butonu -->
    <a asp-action="Create" class="btn btn-primary mt-3">
        <i class="fa-solid fa-plus"></i> Yeni Kategori Ekle
    </a>
</div>

<!-- FontAwesome Kütüphanesi -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
