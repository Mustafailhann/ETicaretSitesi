@using ETicaretData.Identity;
@model IEnumerable<AppUser>

@{
    ViewData["Title"] = "Kullanıcı Listesi";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h2 class="text-center mb-4">Kullanıcı Listesi</h2>

    <table class="table table-hover table-bordered shadow-sm rounded">
        <thead class="table-dark text-center">
            <tr>
                <th>Kullanıcı Adı</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var item in Model)
            {
                <tr>
                    <td class="align-middle">@item.Name</td>
                    <td class="align-middle">
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm mx-1">
                            <i class="fas fa-trash-alt"></i> Sil
                        </a>
                        <a asp-action="RoleAssign" asp-route-id="@item.Id" class="btn btn-primary btn-sm mx-1">
                            <i class="fas fa-user-tag"></i> Rol Ata
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
