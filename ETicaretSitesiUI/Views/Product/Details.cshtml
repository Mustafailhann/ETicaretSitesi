@model ETicaretData.Entities.Product
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="card shadow-lg border-0">
        <div class="card-header bg-primary text-white text-center">
            <h3 class="mb-0">@Model.Name</h3>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Ürün Görseli -->
                <div class="col-md-4 text-center">
                    <img src="@Model.Image" class="img-fluid rounded" alt="Product Image" style="max-height: 250px;">
                </div>
                <!-- Ürün Bilgileri -->
                <div class="col-md-8">
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Kategori</dt>
                        <dd class="col-sm-8">
                            @(Model?.Category?.Description ?? "Kategori Yok")
                        </dd>

                        <dt class="col-sm-4 text-muted">Stok</dt>
                        <dd class="col-sm-8">@Model.Stock</dd>

                        <dt class="col-sm-4 text-muted">Fiyat</dt>
                        <dd class="col-sm-8 text-success font-weight-bold">
                            @Model.Price.ToString("C") <!-- Currency format -->
                        </dd>

                        <dt class="col-sm-4 text-muted">Anasayfada Göster</dt>
                        <dd class="col-sm-8">
                            @(Model.IsHome ? "✅ Evet" : "❌ Hayır")
                        </dd>

                        <dt class="col-sm-4 text-muted">Onaylı</dt>
                        <dd class="col-sm-8">
                            @(Model.IsApproved ? "✅ Onaylı" : "❌ Onaylanmamış")
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <div class="card-footer text-center">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">
                ✏️ Düzenle
            </a>
            <a asp-action="List" asp-controller="Home" class="btn btn-secondary">
                ⬅️ Geri Dön
            </a>
        </div>
    </div>
</div>
